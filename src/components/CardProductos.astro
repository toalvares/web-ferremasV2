---
export interface DatosProducto {
  id : number;
  name: string;
  brand: string;
  price: string;
  image: string;
}

const { id, name, brand, price, image } = Astro.props;

const formatter = new Intl.NumberFormat('es-CL', {
  style: 'currency',
  currency: 'CLP',
});
const precio_format = formatter.format(Number(price));


